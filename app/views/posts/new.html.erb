<%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>

<div class='form-wrap'>
  <div class='form-header'>
    <h1 class='form-header-text'>
      投稿
    </h1>
  </div>

 
   <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">投稿ジャンル</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.collection_select(:genre_id, Genre.all, :id, :name, {}, {class:"input-default"}) %>
  </div>
   <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">title</label>
    </div>
    <%= f.text_area :title, class:"input-default" %>
  </div>
   <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">投稿内容</label>
    </div>
    <%= f.text_area :contant, class:"input-default" %>
  </div>

 
  <div class='register-btn'>
    <%= f.submit "投稿する" ,class:"register-red-btn" %>
  </div>
 
</div>
<% end %>










