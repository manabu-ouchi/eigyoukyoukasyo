<div class="main-wrap">
  <div class="post-wraper">
    <h1 class="maim-title">投稿一覧</h1>
    <% @posts.each do |post|%>   
    <%= link_to post_path(post.id) do %>
    <div class="post-wrap" >
      <div class="post-header">
        <div class="post-header-title"> 投稿 </div>
        <div class="post-user-name">  <%= post.user.last_name%> </div>
      </div>
      <div class="post-title">
      タイトル：<%= post.title%>
      </div>
      <div class="post-content">
      内容： <%=post.content%>
      </div>
    </div>
    <% end %>
    <% end %>
  </div>

</div>