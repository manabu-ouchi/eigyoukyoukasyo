<div class="main-wrap">
  <div class="post-wraper">
  
    <h1 class="maim-title">投稿詳細</h1>
    <%  if user_signed_in? && current_user.id == @post.user_id %>
    <div class="prototype__manage">
          <%= link_to "編集する", '#',method: :get, class: :prototype__btn %>
          <%= link_to "削除する", '#', method: :delete, class: :prototype__btn %>
    </div>
     <% end %>
    <div class="post-wrap" >
      <div class="post-header">
        <div class="post-header-title"> 投稿 </div>
        <div class="post-user-name">  <%= @post.user.last_name%> </div>
      </div>
      <div class="post-title">
        タイトル：<%= @post.title%>
      </div>
      <div class="post-content">
       内容： <%= @post.content%>
      </div>
    </div>
  </div>

</div>