<!DOCTYPE html>
<html>
  <head>
    <title>Eigyoukyoukasyo</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

   <body>
    <header class="header">
      <div class="inner">
        <div class="nav">
          <div class="nav__left">
            <%= link_to("営業の教科書", root_path, class:"application-name") %>
          </div>
          <% if user_signed_in? %>
            <div class="nav__right">
              <%= link_to "ログアウト",destroy_user_session_path, method: :delete , class: :nav__logout%>
              <%= link_to "投稿する", new_post_path, class: :nav__btn %>
              <%= link_to "質問する", "#", class: :nav__btn %>
              <%= link_to "結果報告", "#", class: :nav__btn %>
            </div>
          <% else %>
          
            <div class="nav__right">
              <%= link_to "ログイン", new_user_session_path, class: :nav__btn %>
              <%= link_to "新規登録", new_user_registration_path, class: :nav__btn %>
            </div>
          <% end %>
        </div>
      </div>
    </header>
    <div class="main-wrap">
      <div class= "side-bar">
        <h2 class= "link-lists">投稿を見る</h2>
          <ul>
            <li><%= link_to 'フロント', "/posts/genre/2", class: "list" %></li>
            <li><%= link_to 'クロージング', "/posts/genre/3", class: "list" %></li>
            <li><%= link_to 'その他', "/posts/genre/4", class: "list" %></li>
          </ul>
        <h2 class= "link-lists">質問を見る</h2>
          <ul>
            <li><%= link_to 'フロント', "#", class: "list" %></li>
            <li><%= link_to 'クロージング', "#", class: "list" %></li>
            <li><%= link_to 'その他', "#", class: "list" %></li>
          </ul>
      </div>
  
      <div class="post-main-wrap">
      <%= yield %>
      </div>
    </div>
</div>
    <footer class="footer">
      <p class="copyright">Copyright © PROTO SPACE All rights reserved.</p>
    </footer>
  </body>
</html>



