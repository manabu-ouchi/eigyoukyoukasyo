<div class="cp_form">
<%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
<h1>Contact Form Sample</h1>
 <%= render 'shared/error_messages', model: f.object %>

<div class="cp_group">
 <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
  <label class="cp_label" for="input">email</label>
  <i class="bar"></i>
</div>

<div class="cp_group">
<%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
  <label class="cp_label" for="input">password</label>
  <i class="bar"></i>
</div>

<div class="cp_group">
 <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
  <label class="cp_label" for="input">password（確認）</label>
  <i class="bar"></i>
</div>

<div class="cp_group">
<%= f.text_field :last_name, class:"input-name", id:"last-name", placeholder:"例) 山田" %>
  <label class="cp_label" for="input">お名前</label>
  <i class="bar"></i>
<%= f.text_field :first_name, class:"input-name", id:"first-name", placeholder:"例) 陸太郎" %>
  <i class="bar"></i>
</div>

<div class="cp_group">
 <%= f.collection_select(:department_id, Department.all, :id, :name, {}, {class:"input-default"}) %>
  <label class="cp_label" for="input">所属部署</label>
</div>

<div class="cp_group">
 <%= f.text_area :profile, class:"input-default" %>
  <label class="cp_label" for="input">プロフィール</label>
  <i class="bar"></i>
</div>
<div class="submit-btn">
<%= f.submit "登録する" ,class:"submit" %>
</div>
 
</div>
<% end %>
</div>










