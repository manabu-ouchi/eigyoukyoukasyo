<div class="cp_form">
<%= form_with model: @user, url: user_session_path, class: 'registration-main', local: true do |f| %>
<h1>ログイン</h1>
 <%= render 'shared/error_messages', model: f.object %>

<div class="cp_group">
 <%= f.email_field :email, class:"input-default", id:"email", placeholder:"hoge@hoge", autofocus: true %>
  <label class="cp_label" for="input">email</label>
  <i class="bar"></i>
</div>

<div class="cp_group">
 <%= f.password_field :password, class:"input-default", id:"password", placeholder:"" %>
  <label class="cp_label" for="input">password</label>
  <i class="bar"></i>
</div>


<div class="submit-btn">
<%= f.submit "ログイン" ,class:"submit" %>
</div>
 
</div>
<% end %>
</div>


